---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <nav
    class="fixed top-6 left-1/2 flex w-[90%] max-w-5xl -translate-x-1/2 items-center justify-between rounded-full border border-white/40 bg-white/30 px-8 py-4 shadow-lg backdrop-blur-md dark:border-neutral-700/40 dark:bg-neutral-900/30"
  >
    <!-- Logo -->
    <div class="font-semibold text-lg text-neutral-800 dark:text-neutral-200">
      Huto
    </div>

    <!-- Desktop Menu -->
    <div
      class="hidden sm:flex items-center gap-6 text-neutral-800 dark:text-neutral-200"
    >
      <a href="/" class="font-medium">Home</a>
      <a href="/about">About</a>
      <a href="/projects">Projects</a>
      <a href="https://hcb.hackclub.com/donations/start/hackline">Donate</a>
    </div>

    <!-- Mobile Menu Button -->
    <div class="sm:hidden">
      <button id="menu-btn">
        <img
          src="https://icons.hackclub.com/api/icons/dark/menu"
          alt="Menu"
          class="w-8 h-8 dark:hidden"
        />
        <img
          src="https://icons.hackclub.com/api/icons/snow/menu"
          alt="Menu"
          class="w-8 h-8 hidden dark:flex"
        />
      </button>
    </div>
  </nav>

  <!-- Mobile Dropdown -->
  <div
    id="mobile-menu"
    class="sm:hidden absolute top-24 left-1/2 w-[90%] max-w-5xl mt-2 -translate-x-1/2 rounded-2xl border border-white/40 bg-white/70 dark:border-neutral-800/40 dark:bg-neutral-900/70 backdrop-blur-md shadow-lg p-6 flex flex-col gap-4 text-neutral-800 dark:text-neutral-200 opacity-0 pointer-events-none transform -translate-y-4 transition-all duration-300 ease-in-out"
  >
    <a href="/" class="font-medium">Home</a>
    <a href="/about">About</a>
    <a href="/projects">Projects</a>
    <a href="https://hcb.hackclub.com/donations/start/hackline">Donate</a>
  </div>

  <div
    class="mt-40 text-neutral-900 dark:text-neutral-100 flex flex-col justify-between"
  >
    <!-- Header -->
    <header class="border-b border-neutral-800 dark:border-neutral-600 py-2">
      <div class="max-w-5xl mx-auto flex justify-between items-center ml-[10%]">
        <h1 class="text-4xl font-medium tracking-wide font-display">
          Hi, I'm <span class="text-teal-800 dark:text-violet-300">Huto</span>
        </h1>
      </div>
    </header>

    <!-- Content area -->
    <main class="max-w-5xl ml-[10%] mr-[10%] py-8">
      <section id="aboutMe">
        <h1 class="font-medium text-3xl mb-4 font-display">About me</h1>
        <p class="mb-4">
          Hi! I'm Huto! a 15 year old software engineer. I enjoy building web
          apps, mobile apps, and games, as well as storywriting, playing games,
          reading novels, listening to music, and drawing.
        </p>
        <a
          href="/about"
          class="text-blue-700 dark:text-blue-400 hover:underline">read more!</a
        >
      </section>
      <section id="projects" class="mt-8">
        <h1 class="font-medium text-3xl mb-4 font-display">
          Featured Projects
        </h1>
        <div
          id="project"
          class="w-xs h-auto border-2 border-neutral-600/40 rounded-2xl sm:w-120 sm:h-60 hover:shadow-lg transition-shadow duration-300 bg-red-50 dark:bg-red-950"
        >
          <h1
            class="ml-6 mt-4 text-2xl font-bold font-display text-red-950 dark:text-red-50"
          >
            Hack Line
          </h1>
          <p class="ml-6 my-2 mr-4">
            Hack Line is a real, working phone network where every clubber gets
            their own extension and can call anyone else in the network —
            instantly, for free.
          </p>
          <a
            href="https://hackline.hutotpn.com"
            class="text-blue-700 ml-6 dark:text-blue-400 hover:underline"
            >Website</a
          >
          <a
            href="https://hcb.hackclub.com/donations/start/hackline"
            class="text-blue-700 dark:text-blue-400 ml-4 hover:underline"
            >Donate</a
          >
          <div class="mb-4"></div>
        </div>
      </section>
      <section id="contact" class="mt-8">
        <h1 class="font-medium text-3xl mb-4 font-display">Contact</h1>
        <div class="block sm:flex">
          <p class="mr-2">You can reach me via:</p>
          <select
            name="contactVia"
            id="contactVia"
            class="border border-neutral-600/30 rounded-xl px-4 mr-2"
            ><option disabled selected>Select</option>
            <option value="email">Email</option>
            <option value="slack">Slack (Hack Club)</option>
            <option value="github">GitHub</option>
            <option value="discord">Discord</option>
            <option value="hackline" disabled>Hack Line (coming soon)</option
            ></select
          >
          <a id="contactMe" class="text-blue-700 dark:text-blue-400"></a>
        </div>
      </section>
      <section id="randQuote" class="my-8">
        <h1 class="font-medium text-3xl mb-4 font-display">Random Quote</h1>
        <p id="quote" class="text-xl font-serif mb-4">loading...</p>
        <p class="ml-2">— Huto, <span id="quoteYear"></span></p>
      </section>
    </main>

    <!-- Footer -->
    <footer class="border-t border-neutral-800 py-4 text-center text-sm">
      <div class="max-w-5xl mx-auto flex justify-between items-center px-4">
        <span
          ><span id="month"></span>-<span id="day"></span>-<span id="year"
          ></span></span
        >
      </div>
      <p class="text-neutral-600 mt-2">
        © <span id="copyright-year"></span> Huto
      </p>
    </footer>
  </div>

  <script src="/scripts/quote.js" is:inline></script>
  <script src="/scripts/contact.js" is:inline></script>

  <script>
    fetchQuote();
  </script>
</Layout>
