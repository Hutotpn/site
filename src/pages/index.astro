---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <nav
    class="fixed top-6 left-1/2 flex w-[90%] max-w-5xl -translate-x-1/2 items-center justify-between rounded-full border border-white/40 bg-white/30 px-8 py-4 shadow-lg backdrop-blur-md dark:border-neutral-700/40 dark:bg-neutral-900/30"
  >
    <!-- Logo -->
    <div class="font-semibold text-lg text-neutral-800 dark:text-neutral-200">
      Huto
    </div>

    <!-- Desktop Menu -->
    <div
      class="hidden sm:flex items-center gap-6 text-neutral-800 dark:text-neutral-200"
    >
      <a href="/" class="font-medium">Home</a>
      <a href="/projects">Projects</a>
      <a href="/contact">Contact</a>
    </div>

    <!-- Mobile Menu Button -->
    <div class="sm:hidden">
      <button id="menu-btn">
        <img
          src="https://icons.hackclub.com/api/icons/dark/menu"
          alt="Menu"
          class="w-8 h-8 dark:hidden"
        />
        <img
          src="https://icons.hackclub.com/api/icons/snow/menu"
          alt="Menu"
          class="w-8 h-8 hidden dark:flex"
        />
      </button>
    </div>
  </nav>

  <!-- Mobile Dropdown -->
  <div
    id="mobile-menu"
    class="sm:hidden absolute top-24 left-1/2 w-[90%] max-w-5xl mt-2 -translate-x-1/2 rounded-2xl border border-white/40 bg-white/70 dark:border-neutral-800/40 dark:bg-neutral-900/70 backdrop-blur-md shadow-lg p-6 flex flex-col gap-4 text-neutral-800 dark:text-neutral-200 opacity-0 pointer-events-none transform -translate-y-4 transition-all duration-300 ease-in-out"
  >
    <a href="#" class="font-medium">Home</a>
    <a href="/projects">Projects</a>
    <a href="/contact">Contact</a>
  </div>

  <div
    class="mt-40 text-neutral-900 dark:text-neutral-100 flex flex-col justify-between"
  >
    <!-- Header -->
    <header class="border-b border-neutral-800 py-2">
      <div class="max-w-5xl mx-auto flex justify-between items-center ml-[10%]">
        <h1 class="text-4xl font-medium tracking-wide font-serif">
          Hi, I'm Huto
        </h1>
      </div>
    </header>

    <!-- Content area -->
    <main class="max-w-5xl ml-[10%] py-8">
      <div id="aboutMe">
        <h1 class="font-medium text-3xl font-serif mb-4">About me</h1>
        <p>
          Hi! I'm Huto! I'm a 15 year old developer. I enjoy building web apps
          and games, as well as reading sci-fi novels and playing games.
        </p>
      </div>
      <div id="randQuote" class="mt-8">
        <h1 class="font-medium text-3xl font-serif mb-4">Random Quote</h1>
        <p id="quote" class="text-xl">loading...</p>
        <p>Huto, <span id="quoteYear"></span></p>
      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-neutral-800 py-4 text-center text-sm">
      <div class="max-w-5xl mx-auto flex justify-between items-center px-4">
        <span
          ><span id="month"></span>-<span id="day"></span>-<span id="year"
          ></span></span
        >
      </div>
      <p class="text-neutral-600 mt-2">
        Â© <span id="copyright-year"></span> Huto
      </p>
    </footer>
  </div>
</Layout>

<script>
  const yearEl = document.getElementById("year");
  if (yearEl) {
    yearEl.textContent = new Date().getFullYear().toString();
  }

  const copyrightYearEl = document.getElementById("copyright-year");
  if (copyrightYearEl) {
    copyrightYearEl.textContent = new Date().getFullYear().toString();
  }

  const monthEl = document.getElementById("month");
  if (monthEl) {
    monthEl.textContent = String(new Date().getMonth() + 1).padStart(2, "0");
  }

  const dayEl = document.getElementById("day");
  if (dayEl) {
    dayEl.textContent = String(new Date().getDate()).padStart(2, "0");
  }

  const quoteEl = document.getElementById("quote");
  const quoteYearEl = document.getElementById("quoteYear");

  const fetchQuote = async () => {
    try {
      await fetch("https://quotes.api.hutotpn.com")
        .then((res) => res.json())
        .then((data) => {
          quoteEl.textContent = `"${data.quote}"`;
          quoteYearEl.textContent = data.year || "Unknown Year";
        });
    } catch (error) {
      if (quoteEl && quoteYearEl) {
        quoteEl.textContent = "Failed to load quote." + error;
        quoteYearEl.textContent = "idk";
      }
    }
  };

  fetchQuote();

  const btn = document.getElementById("menu-btn") as HTMLButtonElement | null;
  const menu = document.getElementById("mobile-menu") as HTMLDivElement | null;

  if (btn && menu) {
    btn.addEventListener("click", () => {
      const isOpen = menu.classList.contains("opacity-100");

      if (isOpen) {
        // Close menu
        menu.classList.remove(
          "opacity-100",
          "translate-y-0",
          "pointer-events-auto"
        );
        menu.classList.add(
          "opacity-0",
          "-translate-y-4",
          "pointer-events-none"
        );
      } else {
        // Open menu
        menu.classList.remove(
          "opacity-0",
          "-translate-y-4",
          "pointer-events-none"
        );
        menu.classList.add(
          "opacity-100",
          "translate-y-0",
          "pointer-events-auto"
        );
      }
    });
  }
</script>
